@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <section>
            <div class="row d-flex justify-content-center col-12 border border-primary rounded m-20 rounded-ex" style="margin-top: 25%; background-color: lightsteelblue;opacity:80%">
                <div style="width: 70%">
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" style="padding-top:70px;padding-bottom:30px">
                        <h2>REGISTER</h2>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="margin-top:7%">
                            <button type="submit" class="btn btn-primary btn-lg btn-block">Register</button>
                        </div>
                        <div class="form-group">
                            <p>
                                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Already a User? Log in.</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script type="text/javascript">
        $(document).ready(function () {
            $('header').empty();
        $('footer').empty();
     });
</script>




